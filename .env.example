DEMO_MODE=true

# X-API-KEY for request authentication, comma-separated if multiple
API_KEYS=ADD-X-API-KEY

# Rate limit (per API key)
RATE_LIMIT_PER_MINUTE=60

# Auth / SSO stub
AUTH_ISSUER=http://localhost:3001
AUTH_AUDIENCE=genassista-api