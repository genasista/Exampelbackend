{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/core/*"],
      "@modules/*": ["src/modules/*"],
      "@types": ["src/types"],
      "@data/*": ["src/data/*"],
      "@utils/*": ["src/utils/*"],
      "@contracts/*": ["src/core/contracts/*"],
      "@contracts": ["src/core/contracts/types"]
      },
    "typeRoots": ["src/types", "node_modules/@types"],
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "include": ["src"]
}