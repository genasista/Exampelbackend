{
  "name": "genassista-backend",
  "version": "1.0.0",
  "private": true,
  "description": "Genassista backend service (Node.js + Express + PostgreSQL)",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "postbuild": "tsc-alias",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "echo \"(no tests yet)\" && exit 0",
    "knex": "knex --knexfile knexfile.cjs",
    "migrate:make": "npm run knex -- migrate:make -x ts",
    "migrate:latest": "npm run knex -- migrate:latest",
    "migrate:rollback": "npm run knex -- migrate:rollback",
    "migrate:list": "npm run knex -- migrate:list",
    "gen:types": "openapi-typescript api/contracts/openapi.yml -o src/core/contracts/openapi/types.d.ts",
    "typecheck": "tsc --noEmit",
    "seed": "ts-node-dev --transpile-only src/scripts/seed.ts",
    "migrate-and-seed": "npm run migrate:latest && npm run seed",
    "consumer:subs": "tsx src/consumers/submissionCreated.ts",
    "traffic": "tsx src/scripts/traffic.ts"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.28.0",
    "amqplib": "^0.10.9",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "jose": "^5.10.0",
    "knex": "^3.1.0",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/express": "^5.0.3",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.19",
    "@types/pg": "^8.15.5",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "express-rate-limit": "^8.1.0",
    "openapi-typescript": "^7.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=20"
  }
}
